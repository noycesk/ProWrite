{
  "manifest_version": 3,
  "name": "Pro Write",
  "version": "1.1",
  "description": "Generate formal and polished professional text using AI.",
  "permissions": ["storage", "activeTab", "scripting"],
"host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/img/icon16.png",
      "48": "/img/icon48.png",    
      "128": "/img/icon128.png"
    }
  }
}
